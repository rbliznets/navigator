<UserControl x:Class="NavControlLibrary.Map.Course"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NavControlLibrary.Map"
             mc:Ignorable="d" 
             d:DesignHeight="12" d:DesignWidth="12">
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="Scale" CenterX="6" CenterY="6"/>
            <SkewTransform/>
            <RotateTransform x:Name="Bearing" CenterX="6" CenterY="6"/>
            <TranslateTransform/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <Grid>
        <Polygon x:Name="Shape" Points="2,11 6,1, 10,11" Stroke="#FF08741C" Fill="#FF14B431" />
    </Grid>
</UserControl>
